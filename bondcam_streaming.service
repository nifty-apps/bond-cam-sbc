[Unit]
Description=Bond-cam streaming service

[Service]
User=nifty
ExecStart=/bin/bash -c 'python3 /home/nifty/bond-cam-sbc/bondcam_streaming.py'
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
IgnoreSIGPIPE=true
Restart=always
RestartSec=3
Type=simple
StandardOutput=append:/home/nifty/bond-cam-sbc/bondcam_streaming.log
StandardError=append:/home/nifty/bond-cam-sbc/bondcam_streaming.log

[Install]
WantedBy=multi-user.target
